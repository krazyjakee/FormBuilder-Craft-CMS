{% spaceless %}
    <div class="{{ settings.class }}">
        <input type="color" name="{{ field.handle }}" id="{{ settings.id }}" {% if settings.required %}required{% endif %} />
        &nbsp;
        <label class="{{ settings.labelClass }}" for="{{ settings.id }}">{{ settings.label }}</label>
    </div>
    {% if settings.error %}
        <ul class="parsley-errors-list filled"><li class="parsley-required">{{ settings.error }}</li></ul>
    {% endif %}
{% endspaceless %}