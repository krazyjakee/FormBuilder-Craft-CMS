{% spaceless %}
    {% if settings.label %}
        <label for="{{ settings.id }}" class="{{ settings.labelClass }}">{{ settings.label }}</label>
    {% endif %}

    {% for option in field.settings.options %}

        {% set checked = (option.default ? "checked" : false) %}
        {% set id = settings.id ~ "_" ~ loop.index %}

        <div class="{{ settings.class }}">
            <input type="checkbox" name="{{ field.handle }}[]" value="{{ option.value }}" id="{{ id }}" {% if settings.required %}required{% endif %} {{ checked }} />
            &nbsp;<label for="{{ id }}">{{ option.label }}</label>
        </div>

    {% endfor %}

    {% if settings.error %}
        <ul class="parsley-errors-list filled"><li class="parsley-required">{{ settings.error }}</li></ul>
    {% endif %}
{% endspaceless %}
